<h1>Have a Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h3>Not eaten!</h3>
        {{#each burger}}
          {{#unless this.devoured}}
            <div>
              <form action="/burger/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

       <div class="col s6">
         <h3>Are eaten!</h3>
        {{#each burger}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
                <form action="/burger/{{this.id}}?_method=DELETE" method="DELETE">
                <button type="submit" class="waves-effect waves-light btn green z-depth-4">Remove</button>
              </form>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

  

<h2>Add A Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/burger" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Add Your Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>
